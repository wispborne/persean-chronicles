            "telosQuotesPhase1" : [ "$c:#00CED1{<it is easier to open comms than pick up a sword...and yet>}", "$c:#00BFFF{<they are compelled to destroy what they cannot control>}", "$c:#00CDCD{<hatred is human. we had hoped they would be better>}", "$c:#ADD8E6{<violence begets violence>}", "$c:#00CED1{<we only wanted to live in peace>}" ],
            "telosQuotesPhase2" : [ "$c:#00CED1{<oh my>}", "$c:#00BFFF{<they have walked much too far down the path of war>}", "$c:#ADD8E6{<the more we fell, the fewer yerpa must face>}", "$c:#00CDCD{<how can there be so many?>}" ],
            "telosDeathQuotes" : [ "$c:#00CED1{<it's ok>}", "$c:#00BFFF{<death is but the next step>}", "$c:#ADD8E6{<i hold with those who favor fire>}", "$c:#00CDCD{<the telos live on through krypta>}" ],
            "quotes" : [ "\"This is Captain Eugel of the Hegemony. Power down your weapons and forbidden technology.\"", "\"I have orders to eliminate all threats to the Domain. Your course is a danger to us all.\"", "\"You cannot play God without consequence. I am that consequence.\"", "\"I take no joy in ending your march to technological armageddon. But I will end it.\"", "\"We can’t expect Ludd to do all the work.\"", "\"A brotherhood of Man is a worthy goal, but technology is not the solution.\"", "\"This is not a battle you can win, Telos. Your little experiment is over.\"", "\"Let it end. The record will note that you fought valiantly.\"" ],
            "victoryQuote" : "\"And so another would-be Prometheus falls. Some arts are best left to the Creator.\"",
